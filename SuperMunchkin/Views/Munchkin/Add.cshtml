
@{
    ViewData["Title"] = "Add";
}

@model SuperMunchkin.ViewModels.MunchkinViewModel


<div class="w-100 text-center mt-3 pb-3">
    <h1>Add Munchkin</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="height: 70vh;">
        <div class="text-center">
            <div class="mb-3">
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "custom-border p-1" })
            </div>
            <div class="mb-3">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "custom-border p-1" })
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
            </div>
            <div class="d-inline-block mb-3">
                <div class="float-left mr-5">
                    @Html.RadioButtonFor(m => m.Gender, Models.Enums.MunchkinGender.Male)<p>Male</p>
                </div>
                <div class="float-right">
                    @Html.RadioButtonFor(m => m.Gender, Models.Enums.MunchkinGender.Female)<p>Female</p>
                </div>
            </div>
            <div>
                <button class="button-big custom-border mr-3">
                    @Html.ActionLink("Cancel", "Index", "Game")
                </button>
                <input type="submit" value="Add" class="button-big custom-border" />
            </div>
        </div>
    </div>
}

<div class="custom-border button-small m-3 text-center" style="position: fixed; bottom: 0; left: 0; padding-top: 3px;">
    <i class="fas fa-bars fa-2x navbar-toggler navbar-toggler-icon" style="padding-left: 8px;"></i>
</div>