
@{
    ViewData["Title"] = "Register";
}

@model SuperMunchkin.ViewModels.UserViewModel

<div class="w-100 text-center mt-5 mb-5">
    <h1>Register</h1>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="height: 70vh;">
        <div class="text-center">
            <div>
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "custom-border p-1 mb-3" })
            </div>

            <div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "custom-border p-1 mb-3" })
            </div>

            <div>
                @Html.ValidationMessageFor(m => m.PasswordCheck, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.PasswordFor(m => m.PasswordCheck, new { placeholder = "Repeat Password", @class = "custom-border p-1 mb-3" })
            </div>

            <div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "custom-border p-1 mb-3" })
            </div>

            <div>
                <button class="button-big custom-border">
                    @Html.ActionLink("Cancel", "Login", "User")
                </button>
            </div>
            <div>
                <input type="submit" value="Register" class="button-big custom-border" />
            </div>
        </div>            
    </div>
}